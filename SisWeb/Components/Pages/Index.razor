                    <div class="panel-heading">
                        <h3 class="text-center">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Oooooops:
                            <small>@Message</small>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <p>@Source</p>

                        <ul class="list-group">
                            <li class="list-group-item">@ErrorAll</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

